<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:layout_marginTop="120dp"
    tools:context="mobile.labs.acw.MainActivity">

    <Button
        android:id="@+id/selectPuzzleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onClickSelectPuzzle"
        android:text="@string/MainPageSelectPuzzlePage" />

    <Button
        android:id="@+id/playPuzzleClickButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickPlayClick"
        android:layout_below="@+id/selectPuzzleButton"
        android:text="@string/MainPagePlayClickButton"
        android:visibility="invisible"
        android:layout_marginTop="80dp"/>

    <Button
        android:id="@+id/playPuzzleDragButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onClickPlayDrag"
        android:layout_below="@+id/playPuzzleClickButton"
        android:text="@string/MainPagePlayDragButton"
        android:visibility="invisible" />

</RelativeLayout>
